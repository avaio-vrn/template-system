<%= content_for :h1, content_tag(:h1, @content.contentable.content_header, class: config_get(:html, :h1_class)) %>
<%= content_for :admin_javascripts, javascript_include_tag(:admin_templates) %>
<%= content_for :admin_javascripts, javascript_include_tag(:init_global) %>
<%= content_for :admin_javascripts, javascript_tag("iconGlobalDataSet('#{json_for_icon_global_data(@content.templates.ordering)}');") %>

<% @content.templates.ordering.each_with_index do |template, index| %>
  <div class='<%= template.css_class %> admin-stroke<%= " delete-block" if template&.del %>'
    data-index='<%= index %>'
    data-t-id='<%= template.id %>'>

    <%= render '/template_system/templates/template_admin', template: template %>

  </div>
<% end %>
